        app:lottie_rawRes="@raw/winning_badge"

        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/player1Badge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="95dp"
        android:rotation="20"

        app:layout_constraintBottom_toBottomOf="@+id/player2Badge"
        app:layout_constraintEnd_toEndOf="@+id/tv5"

        app:layout_constraintStart_toStartOf="@+id/tv5"
        app:layout_constraintTop_toTopOf="@+id/player2Badge"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/winning_badge" />

    <com.airbnb.lottie.LottieAnimationView
